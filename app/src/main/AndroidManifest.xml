<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tubesoft.moodrecorder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OtameshiActivity"
            android:label="@string/title_activity_otameshi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BrowsingHistoryActivity"
            android:label="@string/title_activity_browsing_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeasurementActivity"
            android:label="@string/title_activity_measurement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeasurementInstructionActivity"
            android:label="@string/title_activity_measurement_instruction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PreferencesAppActivity"
            android:label="@string/title_activity_preferences_app"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
