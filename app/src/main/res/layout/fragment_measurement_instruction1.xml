<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tubesoft.moodrecorder.MeasurementInstructionActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_top"
        android:id="@+id/textView9"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <ImageView
        android:id="@+id/imageInstrction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/xy_plane"
        android:layout_above="@+id/btnStartMeasurement"
        android:layout_alignRight="@+id/imageInstrction2"
        android:layout_alignEnd="@+id/imageInstrction2"
        android:layout_alignTop="@+id/imageInstrction2"
        android:layout_alignLeft="@+id/imageInstrction2"
        android:layout_alignStart="@+id/imageInstrction2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_bottom"
        android:id="@+id/textView10"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_above="@+id/imageInstrction"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/imageInstrction"
        android:layout_alignStart="@+id/imageInstrction"
        android:layout_alignRight="@+id/imageInstrction"
        android:layout_alignEnd="@+id/imageInstrction" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_measurement"
        android:id="@+id/btnStartMeasurement"
        android:layout_below="@+id/imageInstrction2"
        android:layout_alignRight="@+id/imageInstrction"
        android:layout_alignEnd="@+id/imageInstrction"
        android:layout_alignLeft="@+id/imageInstrction"
        android:layout_alignStart="@+id/imageInstrction" />

    <ImageView
        android:id="@+id/imageInstrction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/finger_move"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
